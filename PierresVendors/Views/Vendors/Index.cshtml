@using PierresVendors.Models;
@{
    Layout = "_Layout";
}


@if(@Model.Count == 0)
{
  <h2>No vendors have been added yet!</h2>
}
@if(@Model.Count > 0)
{
  <h1>-current vendors-</h1>
}


@foreach(Vendor vendor in Model)
{
  <h2><a href='/vendors/@vendor.Id'>@vendor.Name</a></h2>
}

<button class="btn"><a href="/">home</a></button>