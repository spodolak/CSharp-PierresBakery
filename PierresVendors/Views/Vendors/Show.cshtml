@using PierresVendors.Models;
@{
    Layout = "_Layout";
}

<h1>-@Model["vendor"].Name-</h1>
<p>@Model["vendor"].Description</p>

@if(Model["vendor"].Orders.Count == 0)
{
  <h2>No orders have been added yet!</h2>
}

@if(Model["vendor"].Orders.Count > 0)
{
  <h3>open orders:</h3>
  @foreach (Order order in Model["vendor"].Orders)
  {
    <h4><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title (deliver by: @order.Date)</a></h4>
  }
}

<button class="btn"><a href='/vendors/@Model["vendor"].Id/orders/new'>add order</a></button>
<button class="btn"><a href='/vendors'>view all vendors</a></button>